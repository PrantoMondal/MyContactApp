<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#62C1EC"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="35dp"
            android:text="Contact Details"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/showPhoneTV"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="25dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="Phone Number" />

            <ImageView
                android:id="@+id/callBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_marginRight="20dp"
                android:layout_toEndOf="@id/showPhoneTV"
                android:background="#FFFFFF"
                android:src="@drawable/ic_baseline_call_24" />

            <ImageView
                android:id="@+id/smsBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_toEndOf="@id/callBtn"
                android:background="#FFFFFF"
                android:src="@drawable/ic_baseline_message_24" />


        </LinearLayout>

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">


            <TextView
                android:id="@+id/showEmailTV"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="Email" />

            <ImageView
                android:id="@+id/emailBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_email_24_email" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/showAddressTV"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="25dp"

                android:textStyle="bold"
                tools:text="Show on Map" />

            <ImageView
                android:id="@+id/addressBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_baseline_map_24" />
        </LinearLayout>

    </LinearLayout>
</layout>